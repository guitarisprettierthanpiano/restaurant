C(level, len,smooth) =>
    if smooth == 1
        C = (highest(high,len) - lowest(low,len))*level + lowest(low,len)
    else    
        sum = 0.0
        for i = 1 to smooth -1
            sum := x[i] + sum
        a = smooth*level - sum
        C = a * (highest(high,len) - lowest(low,len)) + lowest(low,len)
 
C2(len,smooth) =>
